#!/usr/bin/make -f
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/qmake.mk
QMAKE=qmake-qt4

install/xinx::
        mkdir $(DEB_DESTDIR)/usr/
        mkdir $(DEB_DESTDIR)/usr/bin/
        cp $(CURDIR)/xinx/xinx $(DEB_DESTDIR)/usr/bin/
        cp $(CURDIR)/xinxprojectwizard/xinxprojectwizard $(DEB_DESTDIR)/usr/bin/
        mkdir $(DEB_DESTDIR)/usr/lib/
        cp $(CURDIR)/libxinx/libsharedxinx* $(DEB_DESTDIR)/usr/lib/

install/xinx-doc
        mkdir $(DEB_DESTDIR)/usr/
        mkdir $(DEB_DESTDIR)/usr/share/
        mkdir $(DEB_DESTDIR)/usr/share/doc/
        mkdir $(DEB_DESTDIR)/usr/share/doc/xinx-doc/
        cp -a $(CURDIR)/doc/* $(DEB_DESTDIR)/usr/share/doc/xinx-doc/
